<h2 class="browse-title">Compétences des autres utilisateurs</h2>

<div class="browse-filters">
    <div class="search-container">
        <i class="bi bi-search search-icon"></i>
        <input type="text"
               name="q"
               value="{{ query }}"
               placeholder="Rechercher une compétence, un utilisateur..."
               class="search-input">
    </div>

    <div class="filter-container">
        <select name="type" class="filter-select">
            <option value="all" {% if filterType == 'all' %}selected{% endif %}>Tous les types</option>
            <option value="niveau1" {% if filterType == 'niveau1' %}selected{% endif %}>Niveau 1 - Débutant</option>
            <option value="niveau2" {% if filterType == 'niveau2' %}selected{% endif %}>Niveau 2 - Intermédiaire</option>
            <option value="niveau3" {% if filterType == 'niveau3' %}selected{% endif %}>Niveau 3 - Avancé</option>
            <option value="niveau4" {% if filterType == 'niveau4' %}selected{% endif %}>Niveau 4 - Expert</option>
            <option value="available" {% if filterType == 'available' %}selected{% endif %}>Disponible maintenant</option>
            <option value="technical" {% if filterType == 'technical' %}selected{% endif %}>Techniques</option>
            <option value="creative" {% if filterType == 'creative' %}selected{% endif %}>Créatives</option>
            <option value="business" {% if filterType == 'business' %}selected{% endif %}>Business</option>
        </select>
    </div>

    <button type="submit" class="filter-btn">
        <i class="bi bi-funnel"></i>
        Filtrer
    </button>
</div>

{% if skills|length > 0 %}
    <div class="skills-grid">
        {% for skill in skills %}
            <div class="skill-card">
                <div class="skill-card-header">
                    <div class="skill-title-container">
                        <h3 class="skill-title">{{ skill.name }}</h3>
                        {% if skill.category %}
                            <span class="skill-category">{{ skill.category }}</span>
                        {% endif %}
                    </div>

                    {% if skill.level %}
                        <div class="skill-level-badge level-{{ skill.level }}">
                            {{ skill.level|capitalize }}
                        </div>
                    {% endif %}
                </div>

                <div class="skill-owner">
                    <div class="owner-avatar">
                        {{ skill.owner.name|first|upper }}
                    </div>
                    <div class="owner-info">
                        <h4>{{ skill.owner
                            .name }}</h4>
                        <p class="owner-bio">{{ skill.owner.bio|default('Membre SwapSkill')|u.truncate(50, '...') }}</p>
                    </div>
                </div>

                {% if skill.description %}
                    <p class="skill-description">
                        {{ skill.description|u.truncate(120, '...') }}
                    </p>
                {% endif %}

                <div class="skill-meta">
                    <div class="meta-item">
                        <i class="bi bi-star"></i>
                        <span>{{ skill.rating|default(0) }}/5</span>
                    </div>
                    <div class="meta-item">
                        <i class="bi bi-arrow-left-right"></i>
                        <span>{{ skill.exchanges|default(0) }} échanges</span>
                    </div>
                    <div class="meta-item">
                        <i class="bi bi-clock"></i>
                        <span>{{ skill.createdAt|date('d/m/Y') }}</span>
                    </div>
                </div>

                <div class="skill-actions">
                    <button class="action-btn primary" data-skill-id="{{ skill.id }}">
                        <i class="bi bi-arrow-left-right"></i>
                        Proposer un échange
                    </button>
                    <a href="#" class="action-btn secondary">
                        <i class="bi bi-eye"></i>
                        Voir détails
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>
{% else %}
    <div class="empty-state">
        <div class="empty-icon">
            <i class="bi bi-search"></i>
        </div>
        <h3 class="empty-title">Aucune compétence trouvée</h3>
        <p class="empty-description">
            {% if query %}
                Aucun résultat pour "{{ query }}". Essayez d'autres termes de recherche.
            {% else %}
                Aucune compétence disponible pour le moment. Revenez plus tard.
            {% endif %}
        </p>
        {% if query %}
            <button class="reset-btn" onclick="window.location.href='{{ path('skill_browse') }}'">
                <i class="bi bi-x-circle"></i>
                Réinitialiser la recherche
            </button>
        {% endif %}
    </div>
{% endif %}

