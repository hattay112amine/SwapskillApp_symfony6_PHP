{% extends 'base.html.twig' %}

{% block title %} Mes compétences- SwapSkill{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        :root {
            --primary: #6366F1;
            --primary-light: #818CF8;
            --primary-dark: #4F46E5;
            --accent: #10B981;
            --accent-light: #34D399;
            --warning: #F59E0B;
            --danger: #EF4444;
            --light-bg: #F8FAFC;
            --card-bg: #FFFFFF;
            --text-primary: #334155;
            --text-secondary: #64748B;
            --shadow-sm: 0 4px 6px -1px rgba(0, 0, 0, 0.05), 0 2px 4px -1px rgba(0, 0, 0, 0.03);
            --shadow-md: 0 10px 15px -3px rgba(0, 0, 0, 0.07), 0 4px 6px -2px rgba(0, 0, 0, 0.04);
            --shadow-lg: 0 20px 25px -5px rgba(0, 0, 0, 0.08), 0 10px 10px -5px rgba(0, 0, 0, 0.02);
            --radius-lg: 16px;
            --radius-md: 12px;
            --radius-sm: 8px;
        }

        .skill-detail-container {
            max-width: 1000px;
            margin: 2rem auto;
            padding: 0 1.5rem;
        }

        /* Breadcrumb */
        .breadcrumb-nav {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-bottom: 2rem;
            color: var(--text-secondary);
            font-size: 0.9rem;
        }

        .breadcrumb-nav a {
            color: var(--text-secondary);
            text-decoration: none;
            transition: color 0.2s ease;
        }

        .breadcrumb-nav a:hover {
            color: var(--primary);
        }

        /* Header Section */
        .skill-header {
            background: linear-gradient(135deg, #6366F1 0%, #8B5CF6 100%);
            border-radius: var(--radius-lg);
            padding: 3rem 2.5rem;
            color: white;
            margin-bottom: 2rem;
            position: relative;
            overflow: hidden;
        }

        .skill-header::before {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 200px;
            height: 200px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            transform: translate(100px, -100px);
        }

        .skill-header::after {
            content: '';
            position: absolute;
            bottom: -50px;
            left: -50px;
            width: 150px;
            height: 150px;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 50%;
        }

        .skill-title-container {
            position: relative;
            z-index: 2;
        }

        .skill-category-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            background: rgba(255, 255, 255, 0.2);
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-size: 0.9rem;
            margin-bottom: 1rem;
            backdrop-filter: blur(10px);
        }

        .skill-title {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 1rem;
            line-height: 1.2;
        }

        .skill-meta {
            display: flex;
            align-items: center;
            gap: 2rem;
            margin-top: 2rem;
            flex-wrap: wrap;
        }

        .meta-item {
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .meta-icon {
            width: 40px;
            height: 40px;
            border-radius: 10px;
            background: rgba(255, 255, 255, 0.2);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.2rem;
        }

        .meta-content h4 {
            font-size: 0.85rem;
            font-weight: 600;
            opacity: 0.9;
            margin-bottom: 0.25rem;
        }

        .meta-content p {
            font-size: 1.1rem;
            font-weight: 600;
        }

        /* Main Content */
        .skill-main-content {
            display: grid;
            grid-template-columns: 1fr 350px;
            gap: 2rem;
        }

        /* Left Column */
        .skill-description-card {
            background: var(--card-bg);
            border-radius: var(--radius-lg);
            padding: 2rem;
            box-shadow: var(--shadow-md);
            border: 1px solid #F1F5F9;
            margin-bottom: 1.5rem;
        }

        .section-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--text-primary);
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .section-title i {
            color: var(--primary);
        }

        .skill-description {
            font-size: 1.05rem;
            line-height: 1.7;
            color: var(--text-primary);
        }

        /* Details Grid */
        .details-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1.5rem;
            margin-top: 1.5rem;
        }

        .detail-card {
            background: #F8FAFC;
            border-radius: var(--radius-md);
            padding: 1.5rem;
            border: 1px solid #F1F5F9;
        }

        .detail-label {
            font-size: 0.85rem;
            font-weight: 600;
            color: var(--text-secondary);
            text-transform: uppercase;
            letter-spacing: 0.05em;
            margin-bottom: 0.5rem;
        }

        .detail-value {
            font-size: 1.1rem;
            font-weight: 600;
            color: var(--text-primary);
        }

        /* Level Indicator */
        .level-container {
            margin: 1.5rem 0;
        }

        .level-labels {
            display: flex;
            justify-content: space-between;
            margin-bottom: 0.5rem;
        }

        .level-labels span {
            font-size: 0.9rem;
            color: var(--text-secondary);
        }

        .level-bar {
            height: 10px;
            background: #F1F5F9;
            border-radius: 5px;
            overflow: hidden;
            margin-bottom: 1rem;
        }

        .level-fill {
            height: 100%;
            border-radius: 5px;
        }

        .level-fill.beginner { width: 33%; background: var(--accent); }
        .level-fill.intermediate { width: 66%; background: var(--warning); }
        .level-fill.advanced { width: 100%; background: var(--primary); }
        .level-fill.expert { width: 100%; background: linear-gradient(90deg, var(--primary) 0%, var(--primary-dark) 100%); }

        /* Tags */
        .skill-tags {
            display: flex;
            flex-wrap: wrap;
            gap: 0.75rem;
            margin-top: 1.5rem;
        }

        .skill-tag {
            padding: 0.5rem 1rem;
            background: #EFF6FF;
            border-radius: 20px;
            font-size: 0.9rem;
            color: var(--primary);
            border: 1px solid #DBEAFE;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        /* Right Column - Action Panel */
        .action-panel {
            background: var(--card-bg);
            border-radius: var(--radius-lg);
            padding: 2rem;
            box-shadow: var(--shadow-md);
            border: 1px solid #F1F5F9;
            position: sticky;
            top: 2rem;
            height: fit-content;
        }

        .action-header {
            text-align: center;
            margin-bottom: 2rem;
        }

        .action-avatar {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: linear-gradient(135deg, #6366F1 0%, #8B5CF6 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.8rem;
            font-weight: 600;
            margin: 0 auto 1rem;
        }

        .action-owner h4 {
            font-size: 1.1rem;
            font-weight: 600;
            color: var(--text-primary);
            margin-bottom: 0.25rem;
        }

        .action-owner p {
            color: var(--text-secondary);
            font-size: 0.9rem;
        }

        .action-buttons {
            display: flex;
            flex-direction: column;
            gap: 1rem;
            margin-bottom: 2rem;
        }

        .action-btn {
            padding: 0.875rem 1.5rem;
            border-radius: var(--radius-md);
            font-weight: 600;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.75rem;
            text-decoration: none;
            transition: all 0.3s ease;
            border: none;
            cursor: pointer;
            font-size: 1rem;
        }

        .action-btn.primary {
            background: var(--primary);
            color: white;
        }

        .action-btn.primary:hover {
            background: var(--primary-dark);
            transform: translateY(-2px);
            box-shadow: var(--shadow-lg);
        }

        .action-btn.secondary {
            background: white;
            color: var(--text-primary);
            border: 1px solid #E2E8F0;
        }

        .action-btn.secondary:hover {
            background: #F8FAFC;
            border-color: var(--primary);
            color: var(--primary);
        }

        .action-btn.danger {
            background: #FEF2F2;
            color: #DC2626;
            border: 1px solid #FECACA;
        }

        .action-btn.danger:hover {
            background: #FEE2E2;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 1rem;
            margin-top: 2rem;
            padding-top: 2rem;
            border-top: 1px solid #F1F5F9;
        }

        .stat-item {
            text-align: center;
        }

        .stat-number {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--primary);
            margin-bottom: 0.25rem;
        }

        .stat-label {
            font-size: 0.85rem;
            color: var(--text-secondary);
        }

        /* Related Skills */
        .related-skills {
            margin-top: 3rem;
        }

        .related-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 1.5rem;
            margin-top: 1.5rem;
        }

        .related-card {
            background: var(--card-bg);
            border-radius: var(--radius-md);
            padding: 1.25rem;
            box-shadow: var(--shadow-sm);
            border: 1px solid #F1F5F9;
            transition: all 0.3s ease;
            text-decoration: none;
            color: var(--text-primary);
        }

        .related-card:hover {
            transform: translateY(-3px);
            box-shadow: var(--shadow-md);
            border-color: var(--primary);
        }

        .related-card h4 {
            font-size: 1rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .related-card p {
            font-size: 0.85rem;
            color: var(--text-secondary);
        }

        /* Responsive */
        @media (max-width: 992px) {
            .skill-main-content {
                grid-template-columns: 1fr;
            }

            .action-panel {
                position: static;
            }
        }

        @media (max-width: 768px) {
            .skill-header {
                padding: 2rem 1.5rem;
            }

            .skill-title {
                font-size: 2rem;
            }

            .skill-meta {
                gap: 1rem;
            }

            .details-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="skill-detail-container">
        <!-- Breadcrumb Navigation -->
        <nav class="breadcrumb-nav">
            <a href="{{ path('app_dashboard') }}">Dashboard</a>
            <i class="bi bi-chevron-right"></i>
            <a href="{{ path('app_skill_index') }}">Compétences</a>
            <i class="bi bi-chevron-right"></i>
            <span>{{ skill.title|u.truncate(30, '...') }}</span>
        </nav>

        <!-- Header Section -->
        <div class="skill-header">
            <div class="skill-title-container">
                <div class="skill-category-badge">
                    <i class="bi bi-tag"></i>
                    {{ skill.category|default('Non catégorisé') }}
                </div>
                <h1 class="skill-title">{{ skill.title }}</h1>

                <div class="skill-meta">
                    <div class="meta-item">
                        <div class="meta-icon">
                            <i class="bi bi-person"></i>
                        </div>
                        <div class="meta-content">
                            <h4>Créé par</h4>
                            <p>{{ skill.owner.name|default('Utilisateur') }}</p>
                        </div>
                    </div>



                    <div class="meta-item">
                        <div class="meta-icon">
                            <i class="bi bi-eye"></i>
                        </div>
                        <div class="meta-content">
                            <h4>Vues</h4>
                            <p>{{ skill.views|default('0') }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="skill-main-content">
            <!-- Left Column -->
            <div class="left-column">
                <!-- Description -->
                <div class="skill-description-card">
                    <h2 class="section-title">
                        <i class="bi bi-file-text"></i>
                        Description
                    </h2>
                    <div class="skill-description">
                        {{ skill.description|default('Aucune description fournie.')|nl2br }}
                    </div>
                </div>

                <!-- Details -->
                <div class="skill-description-card">
                    <h2 class="section-title">
                        <i class="bi bi-info-circle"></i>
                        Détails
                    </h2>

                    <div class="details-grid">
                        <div class="detail-card">
                            <div class="detail-label">ID</div>
                            <div class="detail-value">#{{ skill.id }}</div>
                        </div>

                        <div class="detail-card">
                            <div class="detail-label">Niveau</div>
                            <div class="detail-value">{{ skill.level|capitalize }}</div>
                        </div>

                        <div class="detail-card">
                            <div class="detail-label">Disponibilité</div>
                            <div class="detail-value">{{ skill.availability|capitalize }}</div>
                        </div>

                        <div class="detail-card">
                            <div class="detail-label">Catégorie</div>
                            <div class="detail-value">{{ skill.category|default('Non spécifiée') }}</div>
                        </div>
                    </div>

                    <!-- Level Indicator -->
                    <div class="level-container">
                        <div class="level-labels">
                            <span>Niveau de maîtrise</span>
                            <span>{{ skill.level|capitalize }}</span>
                        </div>
                        <div class="level-bar">
                            <div class="level-fill {{ skill.level|lower }}"></div>
                        </div>
                    </div>

                    <!-- Tags -->
                    {% if skill.tags is defined and skill.tags|length > 0 %}
                        <div class="skill-tags">
                            {% for tag in skill.tags %}
                                <span class="skill-tag">
                            <i class="bi bi-tag"></i>
                            {{ tag }}
                        </span>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>

            <!-- Right Column - Action Panel -->
            <div class="action-panel">
                <div class="action-header">
                    <div class="action-avatar">
                        {{ skill.owner.name|first|upper }}
                    </div>
                    <div class="action-owner">
                        <h4>{{ skill.owner.name|default('Utilisateur') }}</h4>
                        <p>Propriétaire de la compétence</p>
                    </div>
                </div>

                <div class="action-buttons">
                    {% if app.user and app.user.id == skill.owner.id %}
                        <!-- Owner actions -->
                        <a href="{{ path('app_skill_edit', {'id': skill.id}) }}" class="action-btn secondary">
                            <i class="bi bi-pencil"></i>
                            Modifier la compétence
                        </a>
                        <button type="button" class="action-btn danger" onclick="document.getElementById('delete-form').submit();">
                            <i class="bi bi-trash"></i>
                            Supprimer la compétence
                        </button>
                    {% else %}
                        <!-- Visitor actions -->
                        <button class="action-btn primary">
                            <i class="bi bi-arrow-left-right"></i>
                            Proposer un échange
                        </button>
                        <button class="action-btn secondary">
                            <i class="bi bi-chat"></i>
                            Contacter le propriétaire
                        </button>
                        <button class="action-btn secondary">
                            <i class="bi bi-bookmark"></i>
                            Ajouter aux favoris
                        </button>
                    {% endif %}
                </div>

                <div class="stats-grid">
                    <div class="stat-item">
                        <div class="stat-number">{{ skill.exchangeRequests|default(0) }}</div>
                        <div class="stat-label">Demandes</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-number">{{ skill.successfulExchanges|default(0) }}</div>
                        <div class="stat-label">Échanges</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-number">{{ skill.averageRating|default(0)|number_format(1) }}</div>
                        <div class="stat-label">Note</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-number">{{ skill.viewCount|default(0) }}</div>
                        <div class="stat-label">Vues</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Delete Form (hidden) -->
        {% if app.user and app.user.id == skill.owner.id %}
            <form id="delete-form" method="post" action="{{ path('app_skill_delete', {'id': skill.id}) }}" style="display: none;">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ skill.id) }}">
            </form>
        {% endif %}

        <!-- Related Skills -->
        {% if relatedSkills is defined and relatedSkills|length > 0 %}
            <div class="related-skills">
                <h2 class="section-title">
                    <i class="bi bi-lightning"></i>
                    Compétences similaires
                </h2>
                <div class="related-grid">
                    {% for related in relatedSkills|slice(0, 4) %}
                        <a href="{{ path('app_skill_show', {'id': related.id}) }}" class="related-card">
                            <h4>{{ related.title }}</h4>
                            <p>{{ related.category|default('Non catégorisé') }} • Niveau: {{ related.level|capitalize }}</p>
                        </a>
                    {% endfor %}
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Confirmation de suppression
            const deleteBtn = document.querySelector('.action-btn.danger');
            if (deleteBtn) {
                deleteBtn.addEventListener('click', function(e) {
                    if (!confirm('Êtes-vous sûr de vouloir supprimer cette compétence ? Cette action est irréversible.')) {
                        e.preventDefault();
                        return false;
                    }
                });
            }

            // Animation des statistiques
            const statNumbers = document.querySelectorAll('.stat-number');
            statNumbers.forEach(stat => {
                const target = parseInt(stat.textContent);
                let current = 0;
                const increment = target / 50;
                const timer = setInterval(() => {
                    current += increment;
                    if (current >= target) {
                        stat.textContent = target;
                        clearInterval(timer);
                    } else {
                        stat.textContent = Math.floor(current);
                    }
                }, 30);
            });

            // Tooltip pour les boutons
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            const tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
{% endblock %}