{% extends '@AdminLTE/layout/default-layout.html.twig' %}

{% block logo_mini %}{% endblock %}
{% block logo_large %}{% endblock %}
{% block navbar_toggle %}{% endblock %}
{% block sidebar_search %}{% endblock %}
{% block footer %}{% endblock %}

{% block page_title %}Profil{% endblock %}
{% block page_subtitle %}: Informations de l’utilisateur{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('app') }}
    <style>
        body { background-color: #f0f2f7; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; }

        /* Conteneur central */
        .profile-container {
            max-width: 900px;
            margin: 0 auto;
            padding: 0 15px;
        }

        /* TITRE ET SOUS-TITRE */
        section.content-header {
            text-align: center;
            margin-bottom: 2rem;
        }

        h1.page-title {
            font-size: 2.8rem;
            font-weight: 800;
            color: #4f46e5 !important; /* couleur violette forte */
            background: linear-gradient(90deg, #4f46e5, #6366f1);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            text-shadow: 2px 2px 6px rgba(0,0,0,0.15);
            margin-bottom: 0.5rem;
            display: inline-block;
            padding: 0.2rem 1rem;
            border-radius: 12px;
        }

        p.page-subtitle {
            font-size: 1.3rem;
            color: #6b7280 !important;
            font-weight: 500;
            letter-spacing: 0.5px;
            margin-top: 0.3rem;
            opacity: 1;
        }
        h1.page-title:hover {
            text-shadow: 4px 4px 12px rgba(79,70,229,0.5);
            transform: scale(1.05);
            transition: all 0.3s ease;
        }

        /* ANIMATIONS */
        @keyframes fadeIn { from { opacity: 0; transform: translateY(15px); } to { opacity: 1; transform: translateY(0); } }
        @keyframes fadeInDown { from { opacity: 0; transform: translateY(-20px); } to { opacity: 1; transform: translateY(0); } }
        .fade-in { animation: fadeIn 0.8s ease forwards; }
        .fade-delay { opacity: 0; animation: fadeIn 0.8s ease forwards; }
        .fade-delay-1 { animation-delay: 0.1s; }
        .fade-delay-2 { animation-delay: 0.2s; }
        .fade-delay-3 { animation-delay: 0.3s; }

        /* Amélioration visuelle des cartes */
        .card {
            background: linear-gradient(145deg, #ffffff, #f7f9fc); /* léger dégradé blanc-bleu clair */
            box-shadow: 0 8px 25px rgba(0,0,0,0.08);
            transition: transform 0.3s ease, box-shadow 0.3s ease, background 0.3s ease;
        }

        .card:hover {
            transform: translateY(-8px) scale(1.02);
            box-shadow: 0 15px 35px rgba(0,0,0,0.15);
            background: linear-gradient(145deg, #f0f4ff, #ffffff);
        }

        .profile-user-img {
            border-radius: 50%;
            border: 4px solid #fff;
            box-shadow: 0 4px 25px rgba(0,0,0,0.2);
            width: 200px;  /* Réduction de 140px à 120px */
            height: 200px; /* Réduction de 140px à 120px */
            object-fit: cover;
            transition: transform 0.3s ease, box-shadow 0.3s ease, filter 0.3s ease;
        }

        .profile-user-img:hover {
            transform: scale(1.1);
            box-shadow: 0 10px 35px rgba(0,0,0,0.25);
            filter: brightness(1.1);
        }


        /* Info-box dynamique */
        .info-box-number {
            background: linear-gradient(90deg, #4f46e5, #6366f1);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .info-box:hover .info-box-number {
            transform: scale(1.05);
        }

        .badge {
            font-size: 0.85rem;
            padding: 0.45em 0.9em;
            margin: 0.15em;
            border-radius: 0.5rem;
            box-shadow: 0 2px 6px rgba(0,0,0,0.1);
            color: #fff !important; /* texte blanc par défaut */
            transition: transform 0.3s, box-shadow 0.3s;
        }

        /* Texte noir pour meilleure lisibilité sur fond clair ou couleurs claires */
        .badge-success, .badge-warning, .badge-primary, .badge-danger {
            color: #1f2937 !important; /* gris foncé lisible */
        }

        /* Ajout léger d’ombre pour contraster le texte */
        .badge span {
            text-shadow: 0 1px 2px rgba(0,0,0,0.2);
        }


        /* Bouton modifier profil */
        .btn-primary {
            box-shadow: 0 4px 15px rgba(79, 70, 229, 0.4);
        }

        .btn-primary:hover {
            transform: scale(1.07);
            box-shadow: 0 6px 25px rgba(79, 70, 229, 0.5);
        }

        /* Petits ajustements responsive */
        @media (max-width: 576px) {
            .profile-user-img { width: 120px; height: 120px; }
            .btn-primary { padding: 0.5rem 1.2rem; font-size: 0.9rem; }
        }

    </style>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    {{ parent() }}
{% endblock %}

{% block content_header %}
    <section class="content-header">
        <h1 class="page-title">{{ block('page_title') }}</h1>
        <p class="page-subtitle">{{ block('page_subtitle') }}</p>
    </section>
{% endblock %}

{% block page_content %}
    <div class="profile-container">

        <!-- Carte Profil -->
        <div class="card text-center p-5 fade-in fade-delay fade-delay-1">
            <img class="profile-user-img img-circle mx-auto mb-4"
                 src="{{ user.photo ? asset('uploads/photos/' ~ user.photo) : asset('bundles/adminlte/images/user2-160x160.jpg') }}"
                 alt="Photo de {{ user.name|default('Utilisateur') }}">
            <h3 class="profile-username">{{ user.name|default('Utilisateur') }}</h3>
            <p>{{ user.bio|default('Aucune bio disponible') }}</p>
            <a href="{{ path('app_profile_edit') }}" class="btn btn-primary mt-3">
                <i class="fas fa-edit"></i> Modifier mon profil
            </a>
        </div>

        <!-- Informations générales -->
        <div class="row mt-4 g-3">
            {% set infos = [
                {icon: 'fas fa-envelope', title: 'Email', value: user.email, color: 'bg-info'},
                {icon: 'fas fa-phone', title: 'Téléphone', value: user.phone, color: 'bg-success'},
                {icon: 'fas fa-map-marker-alt', title: 'Adresse', value: user.adress, color: 'bg-warning'},
                {icon: 'fas fa-user-check', title: 'Statut', value: user.status, color: 'bg-danger'}
            ] %}
            {% for info in infos %}
                <div class="col-md-6">
                    <div class="info-box fade-in fade-delay fade-delay-{{ loop.index }}">
                        <span class="info-box-icon {{ info.color }}"><i class="{{ info.icon }}"></i></span>
                        <div class="info-box-content">
                            <span class="info-box-text">{{ info.title }}</span>
                            {% if info.title == 'Statut' %}
                                {% if info.value is not null %}
                                    <span class="badge {{ info.value ? 'badge-success' : 'badge-danger' }}">{{ info.value ? 'Actif' : 'Inactif' }}</span>
                                {% else %}
                                    <span class="badge badge-warning">Non défini</span>
                                {% endif %}
                            {% else %}
                                <span class="info-box-number">{{ info.value|default('Non renseigné') }}</span>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <!-- Rôles et Compétences -->
        {% for card in ['roles', 'offeredSkill', 'requestedSkill'] %}
            {% set card_data = attribute(user, card) %}
            {% set card_title = card == 'roles' ? 'Rôles' : (card == 'offeredSkill' ? 'Compétences offertes' : 'Compétences recherchées') %}
            {% set card_color = card == 'roles' ? 'bg-primary' : (card == 'offeredSkill' ? 'bg-success' : 'bg-warning') %}
            <div class="card mt-4 fade-in fade-delay fade-delay-1">
                <div class="card-header {{ card_color }} text-white">
                    <h3 class="card-title"><i class="fas {{ card == 'roles' ? 'fa-user-tag' : (card == 'offeredSkill' ? 'fa-handshake' : 'fa-search') }}"></i> {{ card_title }}</h3>
                </div>
                <div class="card-body">
                    {% if card_data %}
                        {% for item in card_data %}
                            <span class="badge {{ card == 'roles' ? 'badge-primary' : (card == 'offeredSkill' ? 'badge-success' : 'badge-warning') }}">{{ item }}</span>
                        {% endfor %}
                    {% else %}
                        <span class="text-muted">Aucune {{ card_title|lower }}</span>
                    {% endif %}
                </div>
            </div>
        {% endfor %}

        <!-- Date de création -->
        <div class="card text-center mt-4 fade-in fade-delay fade-delay-2">
            <div class="card-body text-muted">
                <i class="fas fa-calendar-alt"></i> Créé le : {{ user.createdAt ? user.createdAt|date('d/m/Y H:i') : 'Non défini' }}
            </div>
        </div>

    </div>
{% endblock %}
