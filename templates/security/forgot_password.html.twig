{% extends 'base.html.twig' %}

{% block title %}Forgot Password{% endblock %}

{% block body %}
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Forgot Password | SwapSkill</title>

    <link rel="stylesheet" href="{{ asset('css/adminlte.css') }}">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
  </head>
  <body class="lockscreen bg-body-secondary">
    <div class="lockscreen-wrapper">
      <div class="lockscreen-logo">
        <a href="{{ path('login') }}"><b>SwapSkill</b></a>
      </div>
      <div class="lockscreen-name">{{ app.user ? app.user.name : 'Guest' }}</div>
      <div class="lockscreen-item">
        <form class="lockscreen-credentials">
          <div class="input-group">
            <input type="email" class="form-control" placeholder="Enter your email" />
            <div class="input-group-text border-0 bg-transparent px-1">
              <button type="submit" class="btn shadow-none">
                <i class="bi bi-envelope-arrow-up text-body-secondary"></i>
              </button>
            </div>
          </div>
        </form>
      </div>
      <div class="help-block text-center">
        Enter your email to receive a password reset link.
      </div>
      <div class="text-center">
        <a href="{{ path('login') }}" class="text-decoration-none">Or sign in as a different user</a>
      </div>
    </div>
  </body>
</html>
{% endblock %}
