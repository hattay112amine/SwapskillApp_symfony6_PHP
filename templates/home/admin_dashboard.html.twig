{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Tableau de bord administrateur</h1>

        {# --- Flash Messages --- #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        {# --- Statistiques en cartes --- #}
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card text-white bg-primary mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Utilisateurs</h5>
                        <p class="card-text fs-3">{{ users|length }}</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-success mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Compétences</h5>
                        <p class="card-text fs-3">{{ skills|length }}</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-warning mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Notes / Commentaires</h5>
                        <p class="card-text fs-3">{{ ratings|length }}</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-danger mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Événements</h5>
                        <p class="card-text fs-3">{{ events|length }}</p>
                    </div>
                </div>
            </div>
        </div>

        {# --- Users Section --- #}
        <h2>Utilisateurs</h2>
        <table class="table table-bordered table-striped">
            <thead>
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Nom</th>
                <th>Phone</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.name }}</td>
                    <td>{{ user.phone }}</td>
                    <td>
                        {% if user.status %}
                            <span class="badge bg-success">Actif</span>
                        {% else %}
                            <span class="badge bg-danger">Bloqué</span>
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('admin_user_block', {id: user.id}) }}" class="btn btn-sm btn-warning">Bloquer/Débloquer</a>
                        <a href="{{ path('admin_user_delete', {id: user.id}) }}" class="btn btn-sm btn-danger" onclick="return confirm('Supprimer cet utilisateur ?');">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {# --- Skills Section --- #}
        <h2>Compétences</h2>
        <table class="table table-bordered table-striped">
            <thead>
            <tr>
                <th>ID</th>
                <th>Titre</th>
                <th>Catégorie</th>
                <th>Niveau</th>
                <th>Disponibilité</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for skill in skills %}
                <tr>
                    <td>{{ skill.id }}</td>
                    <td>{{ skill.title }}</td>
                    <td>{{ skill.category }}</td>
                    <td>{{ skill.level }}</td>
                    <td>{{ skill.availability }}</td>
                    <td>
                        <a href="{{ path('admin_skill_delete', {id: skill.id}) }}" class="btn btn-sm btn-danger" onclick="return confirm('Supprimer cette compétence ?');">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {# --- Ratings Section --- #}
        <h2>Notes / Commentaires</h2>
        <table class="table table-bordered table-striped">
            <thead>
            <tr>
                <th>ID</th>
                <th>De</th>
                <th>À</th>
                <th>Score</th>
                <th>Commentaire</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for rating in ratings %}
                <tr>
                    <td>{{ rating.id }}</td>
                    <td>{{ rating.fromUser ? rating.fromUser.name : 'Aucun' }}</td>
                    <td>{{ rating.toUser ? rating.toUser.name : 'Aucun' }}</td>
                    <td>{{ rating.score }}</td>
                    <td>{{ rating.comment }}</td>
                    <td>
                        <a href="{{ path('admin_rating_delete', {id: rating.id}) }}" class="btn btn-sm btn-danger" onclick="return confirm('Supprimer cette note/commentaire ?');">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {# --- Events Section --- #}
        <h2>Événements</h2>
        <table class="table table-bordered table-striped">
            <thead>
            <tr>
                <th>ID</th>
                <th>Titre</th>
                <th>Organisateur</th>
                <th>Date</th>
                <th>Lieu</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for event in events %}
                <tr>
                    <td>{{ event.id }}</td>
                    <td>{{ event.title }}</td>
                    <td>{{ event.organizer ? event.organizer.name : 'Aucun' }}</td>
                    <td>{{ event.date ? event.date|date('d/m/Y H:i') : '-' }}</td>
                    <td>{{ event.location }}</td>
                    <td>
                        <a href="{{ path('admin_event_approve', {id: event.id}) }}" class="btn btn-sm btn-success">Approuver</a>
                        <a href="{{ path('admin_event_delete', {id: event.id}) }}" class="btn btn-sm btn-danger" onclick="return confirm('Supprimer cet événement ?');">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
