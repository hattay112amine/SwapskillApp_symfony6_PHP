{% extends 'base.html.twig' %}

{% block title %}SkillSwap Proposal{% endblock %}

{% block body %}

    <div class="container py-4">

        <div class="text-center p-5 mb-4 rounded-3 shadow-lg"
             style="background: linear-gradient(135deg, #4a90e2, #2c3e50); color: #fff;">
            <i class="bi bi-stars fs-1 mb-2 d-block"></i>
            <h1 class="fw-bold mb-0" style="font-size: 2.5rem;">Welcome to Your SkillSwap Hub</h1>
            <p class="mt-2 fs-5 text-light">Exchange skills and connect with other users seamlessly</p>
        </div>



        <div class="row g-4 mb-4">
            {# Section for proposals you requested #}
            <div class="col-12 mb-3">
                <h2 class="text-primary"><i class="bi bi-send-fill me-2"></i>Proposals You Requested</h2>
                <p class="text-muted">These are the skills you have offered and want to exchange.</p>
            </div>
            {% for proposal in madeProposals %}
                <div class="col-md-3 d-flex">
                    <div class="card border-primary shadow-sm p-3 d-flex flex-column h-100">
                        <div class="card-header bg-primary text-white p-3">
                            <h5 class="mb-0">
                                <i class="bi bi-arrow-right-circle me-1"></i>
                                {{ proposal.offeredSkill.title }} → {{ proposal.requestedSkill.title }}
                            </h5>
                            <small class="text-light">Requested by you</small>
                        </div>
                        <div class="card-body p-3 flex-grow-1">
                            <p><strong>Offered Skill:</strong> {{ proposal.offeredSkill.title }}</p>
                            <p><strong>Requested Skill:</strong> {{ proposal.requestedSkill.title }}</p>
                            <p><strong>Status:</strong> <span class="badge bg-warning text-dark">{{ proposal.status|capitalize }}</span></p>
                            <p><strong>Notes:</strong> {{ proposal.proposal ?: '—' }}</p>

                            {% if proposal.status == 'pending' %}
                                <span class="badge bg-warning mt-2">Waiting for response</span>

                            {% elseif proposal.status == 'accepted' %}
                                <span class="badge bg-success mt-2">Accepted</span>

                                <div class="mt-3">
                                    <p><strong>Schedule Exchange Session:</strong></p>
                                    <a href="{{ path('chat_session', {'proposalId': proposal.id}) }}" class="btn btn-primary btn-sm">
                                        Go to Chat & Schedule
                                    </a>
                                </div>

                                {# START OF NEW LOGIC #}
                                {% if proposal.status == 'accepted' %}
                                    <hr>
                                    <p class="mt-2 mb-1">Exchange Finished?</p>
                                    <a href="{{ path('proposal_complete', {'id': proposal.id}) }}" class="btn btn-info btn-sm w-100">
                                        <i class="bi bi-check-circle-fill me-1"></i> Mark as Complete
                                    </a>
                                {% endif %}
                                {# END OF NEW LOGIC #}


                            {% elseif proposal.status == 'refused' %}
                                <span class="badge bg-danger mt-2">Refused</span>

                            {% endif %}


                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <p class="text-muted">No proposals requested yet.</p>
                </div>
            {% endfor %}

            {# Section for proposals you received #}
            <div class="col-12 mt-5 mb-3">
                <h2 class="text-success"><i class="bi bi-inbox-fill me-2"></i>Proposals You Received</h2>
                <p class="text-muted">These are the skills other users want to exchange with you.</p>
            </div>
            {% for proposal in receivedProposals %}
                <div class="col-md-3 d-flex"">
                    <div class="card border-success shadow-sm p-3 d-flex flex-column h-100">
                        <div class="card-header bg-success text-white p-3">
                            <h5 class="mb-0">
                                <i class="bi bi-arrow-left-circle me-1"></i>
                                {{ proposal.requestedSkill.title }} → {{ proposal.offeredSkill.title }}
                            </h5>
                            <small class="text-light">Requested by {{ proposal.requester.name }}</small>
                        </div>
                        <div class="card-body p-3 flex-grow-1">
                            <p><strong>Requested Skill:</strong> {{ proposal.requestedSkill.title }}</p>
                            <p><strong>Offered Skill:</strong> {{ proposal.offeredSkill.title }}</p>
                            <p><strong>Status:</strong> <span class="badge bg-warning text-dark">{{ proposal.status|capitalize }}</span></p>
                            <p><strong>Notes:</strong> {{ proposal.proposal ?: '—' }}</p>

                            {% if proposal.status == 'pending' %}
                                <div class="d-flex justify-content-between mt-3">
                                    <a href="{{ path('proposal_accept', {'id': proposal.id}) }}" class="btn btn-success btn-sm">Accept</a>
                                    <a href="{{ path('proposal_refuse', {'id': proposal.id}) }}" class="btn btn-danger btn-sm">Refuse</a>
                                </div>

                            {% elseif proposal.status == 'accepted' %}
                                <span class="badge bg-success mt-2">Accepted</span>

                                <div class="mt-3">
                                    <p><strong>Schedule Exchange Session:</strong></p>
                                    <a href="{{ path('chat_session', {'proposalId': proposal.id}) }}" class="btn btn-primary btn-sm">
                                        Go to Chat & Schedule
                                    </a>
                                </div>

                                <hr>
                                <a href="{{ path('proposal_complete', {'id': proposal.id}) }}" class="btn btn-info btn-sm w-100">
                                    <i class="bi bi-check-circle-fill me-1"></i> Mark as Complete
                                </a>

                            {% elseif proposal.status == 'completed' %}
                                <span class="badge bg-dark mt-2">Exchange Completed!</span>

                                {# CHECK 1: See if the current user (the Requester) has already submitted a rating #}
                                {% set rated = false %}
                                {% for rating in proposal.ratings %}
                                    {# Check if the rating was made by the current user (app.user) #}
                                    {% if rating.fromUser.id == app.user.id %}
                                        {% set rated = true %}
                                    {% endif %}
                                {% endfor %}

                                {% if not rated %}
                                    <div class="mt-3">
                                        <a href="{{ path('exchange_rate', {'id': proposal.id}) }}" class="btn btn-warning btn-sm w-100">
                                            <i class="bi bi-star-fill me-1"></i> Rate Partner ({{ proposal.receiver.name }})
                                        </a>
                                    </div>
                                {% else %}
                                    <span class="badge bg-secondary mt-2 w-100">Partner Rated</span>
                                    {% for rating in proposal.ratings %}
                                        {% if rating.fromUser.id == app.user.id %}
                                            <p class="mt-2 mb-1 small text-success">
                                                Your Score: <span class="fw-bold">{{ rating.score }}/5</span>
                                            </p>
                                            {% if rating.comment %}
                                                <small class="text-muted">Comment: "{{ rating.comment|u.truncate(40) }}"</small>
                                            {% endif %}
                                        {% endif %}
                                    {% endfor %}
                                {% endif %}

                            {% elseif proposal.status == 'refused' %}
                                <span class="badge bg-danger mt-2">Refused</span>

                            {% endif %}


                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <p class="text-muted">No proposals received yet.</p>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
