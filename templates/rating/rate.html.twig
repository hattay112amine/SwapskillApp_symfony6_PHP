{% extends 'base.html.twig' %}

{% block title %}Rate Exchange Partner{% endblock %}

{% block body %}
    <div class="container py-5">
        <h1 class="mb-4">
            <i class="bi bi-star-fill text-warning"></i> Rate Your Exchange with {{ partner.name }}
        </h1>

        <p class="text-muted">
            You are rating the skill exchange involving **{{ proposal.offeredSkill.title }}** and **{{ proposal.requestedSkill.title }}**.
        </p>

        <div class="card shadow-sm p-4">
            {{ form_start(form) }}

            {# Display Score field (1-5 stars) #}
            <div class="mb-4">
                {{ form_row(form.score, {'label': 'Your Score (1-5 Stars)'}) }}
            </div>

            {# Display Comment field #}
            <div class="mb-4">
                {{ form_row(form.comment) }}
            </div>

            <button type="submit" class="btn btn-warning btn-lg">Submit Rating</button>
            <a href="{{ path('listofproposals') }}" class="btn btn-secondary btn-lg ms-3">Cancel</a>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}